extends layout

block content
  h1= title
  p Welcome to #{title}
    if show
      form(method='post')
        p Jaka jest Twoja ulubiona pora roku?
          ul
            each item in data
              li
                span=item.title
                input(type="radio" name="quiz" value=item._id)
        input(type="Submit" value="Zagłosuj")
        p Aby zobaczyć wyniki dodaj głos
    else
      h1 Dokonałes ju głosu w ankiecie.
      p Wyniki
      ul
      each item in data
        li #{item.title} głosów: #{item.vote}(#{Math.round(item.vote / sum * 100)}%)
    
      p Głosów oddano: #{sum}

